@using EventWebSite.Utilities
@model EventsWebSite.Models.Event
@{
    ViewBag.Title = "Event Details";
}

<h2>Event Details</h2>

    @Html.Label("ID :") 

    @Html.Label(Model.Id.ToString())

    <br />

    @Html.Label("Text :") 

    @Html.Label(Model.Text)

    <br />
      
    @Html.Label("Time Created :") 

    @Html.Label(Model.Time.ToLocalTime().ToString("dd-MM-yyyy hh:mm"))

    <br />
      
    @Html.Label("Task Id :") 

    @Html.Label(Model.TaskId.ToString())

    <br />
      
    @Html.Label("User Id :") 

    @Html.Label(Model.UserId.ToString())
    
    <br />
      
    @Html.Label("Event Type :") 
    @Html.Label(((EventsWebSite.Models.EventType)Model.EventType).ToString())





<br />
